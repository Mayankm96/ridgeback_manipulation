
<!--
  Manipulator specific version of 'robot_interface_streaming.launch'.

  Defaults provided for hc10:
   - 6 joints

  Usage:
    robot_interface_streaming_hc10.launch robot_ip:=<value> controller:=<yrc1000>
-->
<launch>
	<arg name="robot_ip" default="192.168.131.40" />

  <!-- controller: Controller name (yrc1000) -->
  <arg name="controller" default="yrc1000" />

	<rosparam command="load" file="$(find ridgeback_hc10_description)/config/joint_names_hc10.yaml" />

	<include file="$(find motoman_driver)/launch/robot_interface_streaming_$(arg controller).launch">
		<arg name="robot_ip"   value="$(arg robot_ip)" />
	</include>
</launch>
