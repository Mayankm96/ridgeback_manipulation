<launch>
  <arg name="arm" default="$(optenv RIDGEBACK_KINOVA_ARM gen3)"/>
  <arg name="ip_address" default="$(optenv RIDGEBACK_KINOVA_IP 192.168.131.40)"/>
  <arg name="gripper" default="$(optenv RIDGEBACK_KINOVA_GRIPPER robotiq_2f_85)"/>
  <arg name="start_rviz" default="false"/>

  <include file="$(find kortex_driver)/launch/kortex_driver.launch" >
    <arg name="arm" value="$(arg arm)"/>
    <arg name="ip_address" value="$(arg ip_address)"/>
    <arg name="gripper" value="$(arg gripper)"/>
    <arg name="start_rviz" value="$(arg start_rviz)"/>
    <arg name="start_moveit" value="False"/>
  </include>

  <node name="joint_state_relay" type="relay" pkg="topic_tools" args="/my_gen3/joint_states /joint_states" />
</launch>
