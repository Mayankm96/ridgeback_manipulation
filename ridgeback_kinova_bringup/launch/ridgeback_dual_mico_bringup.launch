<launch>
  <arg name="left_serial_number"/>
  <arg name="right_serial_number"/>

  <include file="$(find kinova_bringup)/launch/kinova_robot.launch">
    <arg name="kinova_robotType" value="m1n6s300"/>
    <arg name="kinova_robotName" value="left_mico_arm"/>
    <arg name="kinova_robotSerial" value="$(arg left_serial_number)"/>
  </include>

  <include file="$(find kinova_bringup)/launch/kinova_robot.launch">
    <arg name="kinova_robotType" value="m1n6s300"/>
    <arg name="kinova_robotName" value="right_mico_arm"/>
    <arg name="kinova_robotSerial" value="$(arg right_serial_number)"/>
  </include>
</launch>
