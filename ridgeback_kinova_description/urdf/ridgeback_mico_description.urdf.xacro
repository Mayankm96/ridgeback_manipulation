<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <joint name="arm_mount_joint" type="fixed">
    <parent link="mid_mount" />
    <child link="arm_mount_link" />
    <origin xyz="$(optenv RIDGEBACK_MICO_XYZ 0.21 0.0 0.0)" rpy="$(optenv RIDGEBACK_MICO_RPY 0 0 0)"/>
  </joint>

  <link name="arm_mount_link"/>

  <xacro:include filename="$(find kinova_description)/urdf/m1n6s300.xacro"/>

  <xacro:m1n6s300  base_parent="arm_mount_link" prefix="mico_arm"/>
</robot>
